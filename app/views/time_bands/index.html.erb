<p id="notice"><%= notice %></p>

<h1>Listing Time Bands</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_bands.each do |time_band| %>
      <tr>
        <td><%= time_band.date %></td>
        <td><%= link_to 'Show', time_band %></td>
        <td><%= link_to 'Edit', edit_time_band_path(time_band) %></td>
        <td><%= link_to 'Destroy', time_band, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

