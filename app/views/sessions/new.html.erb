<div id="login-page " class="row mt-120">
  <div class="offset-s4 col s4  card-panel">
    <%= form_tag session_path do %>
        <div class="row">
          <div class="input-field col s12 center">
            <p class="center login-form-text">Sports Booking</p>
          </div>

          <div class="row margin">
            <div class="input-field col s12">
              <%= text_field_tag :dni %>
              <%= label_tag 'dni', :dni, data: {success: 'right'}, class: "center-align" %>
            </div>
          </div>

          <div class="row margin">
            <div class="input-field col s12">
              <%= password_field_tag :password %>
              <label for="password">Password</label>
            </div>
          </div>

          <div class="actions row margin">
            <button class="btn waves-effect waves-light col s12 blue lighten-2" type="submit" name="action">Login
              <i class="material-icons right">perm_identity</i>
            </button>
          </div>

        </div>
    <% end %>
  </div>
</div>