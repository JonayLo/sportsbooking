<% if @player %>
$(document).ready(function () {
  $('.tooltipped').tooltip({delay: 15});
});

$("#current_players").append("<%= j render 'new_player' %>");
Materialize.toast('Team sucessfully updated', 1000, 'rounded');
<% else %>
$(document).ready(function () {
  $('.tooltipped').tooltip({delay: 15});
});

Materialize.toast("Couldn't find the player", 1000, 'rounded');
<% end %>