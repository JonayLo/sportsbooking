<div class="container">
  <div class="row">
    <div class="col s12 m7">
      <div class="card">
        <div class="card-image">
          <%= image_tag "/default_profile.jpg" %>
          <span class="card-title">Card Title</span>
        </div>
        <div class="card-content">
          <p>Dni:
            <b>
              <%= @user.dni %>
            </b>
          </p>
          <p>
            Name:
            <b>
              <%= @user.name %>
            </b>
          </p>
        </div>
        <div class="card-action">
          <%= link_to "Edit", edit_user_path(user: @user.dni), class: "btn button blue blue-light-2"%>
          <%= link_to "Contact", new_message_path(user: @user.dni), class: "btn button blue blue-light-2" %>
        </div>
      </div>
    </div>
  </div>
  <%= link_to 'Back', :back, class: "button btn blue blue-lighten-2" %>
</div>

