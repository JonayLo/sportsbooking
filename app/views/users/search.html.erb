<div class="container">
  <div class="row">
    <div class="col s6 offset-s3 mt-120">
    <%= form_tag search_users_path, method: :get do %>
    <div class="input-field col s12">
      <%= text_field_tag :name, nil, :placeholder => "Search name user", class: 'hidden'%>
      <%= label_tag 'Nombre', :Name, data: {success: 'right'}, class: "center-align" %>
    </div>

    <div class="actions margin">
      <button class="btn waves-effect waves-light col s12 blue lighten-2" type="submit" name="action">Search
        <i class="material-icons right">perm_identity</i>
      </button>
    </div>
    <% end %>
    </div>
  </div>
</div>
