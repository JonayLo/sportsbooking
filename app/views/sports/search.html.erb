<div class="container">
  <div class="row">
    <div class="col s6 offset-s3 mt-120">
    <%= form_tag search_sports_path, method: :get do %>
    <div class="input-field col s12">
      <%= text_field_tag :name, nil, :placeholder => "Search name sport", class: 'hidden'%>
      <%= label_tag 'Nombre', :Name, data: {success: 'right'}, class: "center-align" %>
    </div>

    <div class="actions margin">
      <button class="btn waves-effect waves-light col s12 blue lighten-2" type="submit" name="action">Search
        <i class="material-icons right">info</i>
      </button>
    </div>
    <% end %>
    </div>

  </div>
<div class=" row ">
  <table class="responsive-table striped centered col s6 offset-s3 mt-30">
    <thead>
    <tr>
      <th data-field="name">Name</th>
      <th data-field="max_player">max_player</th>
    </tr>
    </thead>
    <% @sports.each do |sport| %>
        <tr>
          <td><%=sport.name%></td>
          <td><%=sport.max_players%></td>
        </tr>

    <% end %>
  </table>
</div>
</div>
