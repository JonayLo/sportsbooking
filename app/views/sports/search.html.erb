<div class="container">
  <div class="row">
    <div class="col s6 offset-s3 mt-120">
    <%= form_tag search_sports_path, method: :get do %>
    <div class="input-field col s12">
      <%= text_field_tag :name, nil, :placeholder => "Search name sport", class: 'hidden'%>
      <%= label_tag 'Nombre', :name, data: {success: 'right'}, class: "center-align" %>
    </div>

    <div class="actions margin">
      <button class="btn waves-effect waves-light col s12 blue lighten-2" type="submit" name="action">Search
        <i class="material-icons right">info</i>
      </button>
    </div>
    <% end %>
    </div>

  </div>
  <% if @teams.length != 0 %>
      <div>
        <h3 class="center">Search</h3>
      </div>
      <table class="responsive-table striped centered mt-30">
        <thead>
        <tr>
          <th data-field="name">Name</th>
          <th data-field="sport">Sport</th>
          <th data-field="captain">Captain</th>
          <th data-field="action">Action</th>
        </tr>
        </thead>
        <% @teams.each do |team| %>
            <tr>
              <td><%=team.name%></td>
              <td><%=team.sport.name%></td>
              <td><%=team.user.name%></td>
              <td><%= link_to 'Show', team_path(team.id), class: "btn blue lighten-2" %></td>
            </tr>

        <% end %>
      </table>
  <% end %>
</div>
